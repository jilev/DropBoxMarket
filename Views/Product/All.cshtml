@model IEnumerable<DropBoxMarket.Models.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "All Products";
}

<h2 class="mb-4">All Products</h2>

<form method="get" asp-controller="Product" asp-action="All" class="mb-4">
    <div class="row g-2 align-items-end">
        <div class="col-md-4">
            <label for="categoryFilter" class="form-label">Filter by Category</label>
            <select id="categoryFilter" name="categoryId" class="form-select">
                <option value="">-- All Categories --</option>
                @foreach (var category in (SelectList)ViewBag.Categories)
                {
                    bool isSelected = ViewBag.SelectedCategory != null && ViewBag.SelectedCategory.ToString() == category.Value;
                    <option value="@category.Value" selected="@(isSelected ? "selected" : null)">
                        @category.Text
                    </option>
                }
            </select>
        </div>
        <div class="col-md-auto">
            <button type="submit" class="btn btn-primary">Apply</button>
        </div>
    </div>
</form>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(product.ImageUrl))
                {
                    <img src="@product.ImageUrl" class="card-img-top" style="object-fit: cover; height: 200px;" />
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Title</h5>
                    <p class="card-text mb-1">Price: <strong>@product.Price.ToString("C")</strong></p>
                    <p class="card-text text-muted mb-2">Category: @product.Category?.Name</p>

                    <form method="post" asp-controller="Cart" asp-action="AddToCart" class="mb-2">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button type="submit" class="btn btn-primary w-100">Add to Cart</button>
                    </form>

                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-warning w-50">Edit</a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id"
                           class="btn btn-danger w-50"
                           onclick="return confirm('Are you sure you want to delete this product?');">
                            Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
