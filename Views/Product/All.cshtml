@model IEnumerable<DropBoxMarket.Models.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "All Products";
}

<h2 class="mb-4">All Products</h2>

<form method="get" asp-controller="Product" asp-action="All" class="mb-4">
    <div class="row g-2 align-items-end">
        <div class="col-md-4">
            <label for="categoryFilter" class="form-label">Filter by Category</label>
            <select id="categoryFilter" name="categoryId" class="form-select">
                <option value="">-- All Categories --</option>
                @foreach (var category in (SelectList)ViewBag.Categories)
                {
                    bool isSelected = ViewBag.SelectedCategory != null && ViewBag.SelectedCategory.ToString() == category.Value;
                    <option value="@category.Value" selected="@(isSelected ? "selected" : null)">
                        @category.Text
                    </option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <label for="searchTerm" class="form-label">Search Products</label>
            <input type="text" id="searchTerm" name="searchTerm" value="@ViewBag.SearchTerm" class="form-control" placeholder="Search..." />
        </div>

        <div class="col-md-auto">
            <button type="submit" class="btn btn-primary">Apply</button>
        </div>
    </div>
</form>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var product in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(product.ImageUrl))
                {
                    <img src="@product.ImageUrl" class="card-img-top" style="object-fit: cover; height: 200px;" />
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.Title</h5>
                    <p class="card-text mb-1">Price: <strong>@product.Price.ToString("C")</strong></p>
                    <p class="card-text text-muted mb-2">Category: @product.Category?.Name</p>

                    <form method="post" asp-controller="Cart" asp-action="AddToCart" class="mb-2">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <button type="submit" class="btn btn-primary w-100">Add to Cart</button>
                    </form>

                    <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id"
                       class="btn btn-outline-info w-100 mb-2">Details</a>

                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-warning w-50">Edit</a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id"
                           class="btn btn-danger w-50"
                           onclick="return confirm('Are you sure you want to delete this product?');">
                            Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (ViewBag.TotalPages != null && ViewBag.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="All"
                   asp-route-categoryId="@ViewBag.SelectedCategory"
                   asp-route-searchTerm="@ViewBag.SearchTerm"
                   asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
            </li>

            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link"
                       asp-action="All"
                       asp-route-categoryId="@ViewBag.SelectedCategory"
                       asp-route-searchTerm="@ViewBag.SearchTerm"
                       asp-route-page="@i">@i</a>
                </li>
            }

            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="All"
                   asp-route-categoryId="@ViewBag.SelectedCategory"
                   asp-route-searchTerm="@ViewBag.SearchTerm"
                   asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}

@if (ViewBag.RecommendedProducts != null && ((List<DropBoxMarket.Models.Product>)ViewBag.RecommendedProducts).Any())
{
    <hr />
    <h3>You may also like</h3>
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @foreach (var rec in (List<DropBoxMarket.Models.Product>)ViewBag.RecommendedProducts)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(rec.ImageUrl))
                    {
                        <img src="@rec.ImageUrl" class="card-img-top" style="object-fit: cover; height: 200px;" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@rec.Title</h5>
                        <p class="card-text mb-1">Price: <strong>@rec.Price.ToString("C")</strong></p>
                        <p class="card-text text-muted mb-2">Category: @rec.Category?.Name</p>

                        <a asp-action="Details" asp-controller="Product" asp-route-id="@rec.Id"
                           class="btn btn-outline-info w-100 mb-2">Details</a>

                        <form method="post" asp-controller="Cart" asp-action="AddToCart">
                            <input type="hidden" name="productId" value="@rec.Id" />
                            <button type="submit" class="btn btn-primary w-100">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
