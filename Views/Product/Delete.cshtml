@model DropBoxMarket.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2 class="mb-4 text-danger">Confirm Delete</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this product?
</div>

<div class="mb-3">
    <strong>Title:</strong> @Model.Title <br />
    <strong>Category:</strong> @Model.Category?.Name <br />
    <strong>Price:</strong> @Model.Price.ToString("C")
</div>

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <div class="mb-3">
        <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="max-height: 150px;" />
    </div>
}

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="All" class="btn btn-secondary ms-2">Cancel</a>
</form>
