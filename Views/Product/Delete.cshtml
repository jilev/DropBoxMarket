@model DropBoxMarket.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2 class="mb-4 text-danger">Confirm Delete</h2>

<div class="alert alert-warning">
    <strong>Warning:</strong> Are you sure you want to delete this product? This action cannot be undone.
</div>

<div class="card mb-3 p-3 shadow-sm">
    <div class="row g-3">
        <div class="col-md-8">
            <p><strong>Title:</strong> @Model.Title</p>
            <p><strong>Category:</strong> @Model.Category?.Name</p>
            <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
        </div>
        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail" style="max-height: 150px;" />
            }
            else
            {
                <p class="text-muted">No image available</p>
            }
        </div>
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="All" class="btn btn-secondary">
            Cancel
        </a>
    </div>
</form>
