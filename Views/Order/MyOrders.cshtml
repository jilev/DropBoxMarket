@model IEnumerable<DropBoxMarket.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<h2>My Orders</h2>

@foreach (var order in Model)
{
    decimal orderTotal = order.Items.Sum(i => i.Product.Price * i.Quantity);

    <div class="card mb-4">
        <div class="card-header">
            <strong>Order #@order.Id</strong> — @order.OrderDate.ToLocalTime().ToString("g")
        </div>

        <ul class="list-group list-group-flush">
            @foreach (var item in order.Items)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @item.Product.Title (x@item.Quantity)
                    <span>@((item.Product.Price * item.Quantity).ToString("C"))</span>
                </li>
            }
            <li class="list-group-item text-end fw-bold">
                Total: @orderTotal.ToString("C")
            </li>
        </ul>
    </div>
}
