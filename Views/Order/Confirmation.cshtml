@model DropBoxMarket.Models.ViewModels.ConfirmationViewModel

@{
    ViewData["Title"] = "Order Confirmation";
}

<p>Thank you for your order, @Model.FullName.</p>

<ul>
    @foreach (var item in Model.Items)
    {
        <li>@item.ProductName - @item.Quantity x @item.Price.ToString("C")</li>
    }
</ul>

<p><strong>Total Price:</strong> @Model.TotalPrice.ToString("C")</p>
<p><strong>Total: @Model.TotalPrice.ToString("C")</strong></p>

<a asp-controller="Home" asp-action="Index" class="btn btn-primary">Back to Home</a>
