@model DropBoxMarket.Models.Product
@{
	ViewData["Title"] = "Product Details";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Product Details</h2>
<div class="card p-3">
	<div class="row">
		<div class="col-md-4">
			@if (!string.IsNullOrEmpty(Model.ImageUrl))
			{
				<img src="@Model.ImageUrl" class="img-fluid rounded" />
			}
		</div>
		<div class="col-md-8">
			<h4>@Model.Title</h4>
			<p>@Model.Description</p>
			<p><strong>Price:</strong> @Model.Price.ToString("C")</p>
			<p><strong>Category:</strong> @Model.Category?.Name</p>
			<a asp-area="Admin" asp-controller="Products" asp-action="Index" class="btn btn-secondary">Back</a>
			<a asp-area="Admin" asp-controller="Products" asp-action="Edit" [asp-route-id="@Model.Id](mailto:asp-route-id=%22@Model.Id)" class="btn btn-primary">Edit</a>
		</div>
	</div>
</div>