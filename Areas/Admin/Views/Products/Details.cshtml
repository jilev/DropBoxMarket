@model DropBoxMarket.Models.Product
@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Product Details</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
        <p class="card-text"><strong>Category:</strong> @Model.Category?.Name</p>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid" />
        }
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
