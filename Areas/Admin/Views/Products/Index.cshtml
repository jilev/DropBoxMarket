@model IEnumerable<DropBoxMarket.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Products</h2>
    <a asp-area="Admin" asp-controller="Products" asp-action="Create" class="btn btn-success">
        + Add New Product
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th style="width:120px">Image</th>
                    <th>Title</th>
                    <th style="width:140px">Price</th>
                    <th style="width:160px">Category</th>
                    <th class="text-end" style="width:220px">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(p.ImageUrl))
                            {
                                <img src="@p.ImageUrl" class="img-thumbnail" style="max-height:60px" alt="Product image" />
                            }
                            else
                            {
                                <span class="text-muted">No image</span>
                            }
                        </td>
                        <td>@p.Title</td>
                        <td>@p.Price.ToString("C")</td>
                        <td>@p.Category?.Name</td>
                        <td class="text-end">
                            <a asp-area="Admin" asp-controller="Products" asp-action="Details" [asp-route-id="@p.Id](mailto:asp-route-id=%22@p.Id)"
                               class="btn btn-sm btn-outline-info me-1">Details</a>

                            <a asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@p.Id"
                               class="btn btn-sm btn-primary me-1">Edit</a>

                            <form asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@p.Id"
                                  method="post" class="d-inline"
                                  onsubmit="return confirm('Delete this product?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


</div>